<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        style="@style/title_font_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ID찾기"
        android:textAlignment="center"
        android:textSize="40sp"
        android:layout_marginBottom="100dp"
        android:layout_marginTop="20dp"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="이름"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/black"
            />
        <EditText
            android:theme="@style/edit_text_theme"
            android:textColor="@color/black"
            android:id="@+id/name_findid"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:singleLine = "true"
            android:lines = "1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="생년월일"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/black"
            />
        <EditText
            android:theme="@style/edit_text_theme"
            android:textColor="@color/black"
            android:id="@+id/birthday_findid"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="8"
            android:hint="ex.19990101"
            android:textAlignment="center"
            android:singleLine = "true"
            android:lines = "1"
            />
    </LinearLayout>

    <Button
        style="@style/content_font_style"
        android:id="@+id/submit_findid"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="ID 찾기"
        android:layout_gravity="center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원님의 id는"
        android:textAlignment="center"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        />
    <TextView
        android:id="@+id/show_findid"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text=""
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:gravity="center"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="입니다."
        android:textAlignment="center"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        />

    <Button
        style="@style/content_font_style"
        android:background="@drawable/custom_btn"
        android:textColor="@color/white"
        android:id="@+id/back_findid"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="돌아가기"
        android:layout_gravity="center"/>

</LinearLayout>