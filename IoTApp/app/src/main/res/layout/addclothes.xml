<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/title_font_style"
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:text="등록"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="#000000"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            style="@style/content_font_style"
            android:background="@drawable/custom_btn"
            android:textColor="@color/white"
            android:id="@+id/album_addclothes"
            android:layout_width="85dp"
            android:layout_height="30dp"
            android:layout_marginBottom="14dp"
            android:layout_margin="15dp"
            android:text="앨범"
            android:textSize="24sp"
            />
        <Button
            style="@style/content_font_style"
            android:background="@drawable/custom_btn"
            android:textColor="@color/white"
            android:id="@+id/camera_addclothes"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginBottom="14dp"
            android:layout_margin="15dp"
            android:text="카메라"
            android:textSize="24sp"
            />
    </LinearLayout>

    <ImageView
        android:id="@+id/imagePreview"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        />
    <TextView
        style="@style/content_font_style"
        android:id="@+id/uritext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            style="@style/content_font_style"
            android:layout_width="53dp"
            android:layout_height="wrap_content"
            android:text="구입날짜"
            android:textAlignment="center"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="20dp"
            android:textSize="16dp"/>
        <EditText
            android:theme="@style/edit_text_theme"
            android:id="@+id/buydate"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text=""
            android:hint="ex.19990101"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="8"
            android:singleLine = "true"
            android:lines = "1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            style="@style/content_font_style"
            android:layout_width="53dp"
            android:layout_height="wrap_content"
            android:text="카테고리"
            android:textAlignment="center"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="20dp"
            android:textSize="16dp"/>
        <Spinner
            style="@style/content_font_style"
            android:id="@+id/tag1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            style="@style/content_font_style"
            android:layout_width="53dp"
            android:layout_height="wrap_content"
            android:text="종류"
            android:textAlignment="center"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="20dp"
            android:textSize="16dp"/>
        <Spinner
            style="@style/content_font_style"
            android:id="@+id/tag2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            style="@style/content_font_style"
            android:layout_width="53dp"
            android:layout_height="wrap_content"
            android:text="색상"
            android:textAlignment="center"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="20dp"
            android:textSize="16dp"/>
        <Spinner
            style="@style/content_font_style"
            android:id="@+id/tag3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            />
    </LinearLayout>
    <TextView
        style="@style/content_font_style"
        android:id="@+id/ai_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textSize="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:background="@drawable/custom_btn"
            android:textColor="@color/white"
            style="@style/content_font_style"
            android:id="@+id/cancel_addclothes"
            android:layout_width="85dp"
            android:layout_height="30dp"
            android:layout_marginBottom="24dp"
            android:layout_margin="20dp"
            android:text="취소"
            android:textSize="24sp"
            />
        <Button
            style="@style/content_font_style"
            android:background="@drawable/custom_btn"
            android:textColor="@color/white"
            android:id="@+id/save_addclothes"
            android:layout_width="85dp"
            android:layout_height="30dp"
            android:layout_marginBottom="24dp"
            android:layout_margin="20dp"
            android:text="저장"
            android:textSize="24sp"
            />
    </LinearLayout>
</LinearLayout>